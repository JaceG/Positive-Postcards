# Example environment file
# Copy this to .env and fill in your actual values

# Stripe API Keys
# Get these from https://dashboard.stripe.com/apikeys
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY

# Google Places API Key (server-side only)
# Get this from https://console.cloud.google.com/
# Enable the Places API and Maps JavaScript API
GOOGLE_PLACES_API_KEY=YOUR_GOOGLE_PLACES_API_KEY

# Stripe Webhook Secret (optional, for webhooks)
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Application settings
NODE_ENV=development
REACT_APP_API_URL=http://localhost:3001

# Hotjar Analytics (client-side)
# Set to 'true' to enable in development, automatically enabled in production
REACT_APP_ENABLE_HOTJAR=false

# Postmark Email Service
# Get these from https://postmarkapp.com/
POSTMARK_API_KEY=YOUR_POSTMARK_API_KEY
POSTMARK_SERVER_ID=YOUR_POSTMARK_SERVER_ID
EMAIL_FROM=noreply@positiveposcards.com

# Note: Frontend environment variables must start with REACT_APP_
# The secret key should only be used on the backend server 